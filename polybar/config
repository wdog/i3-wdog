############## VOLUME ###############

[module/volume]
type                     = internal/pulseaudio
use-ui-max               = true
format-volume            = <label-volume> <ramp-volume> <bar-volume>
format-muted             = <label-muted>

bar-volume-width = 10
bar-volume-foreground-0 = #97ff86
bar-volume-foreground-1 = #a3da32
bar-volume-foreground-2 = #a3da32
bar-volume-foreground-3 = #c8b000
bar-volume-foreground-4 = #e17f00
bar-volume-foreground-5 = #eb4112
bar-volume-foreground-6 = #Fb4112
bar-volume-gradient =true 
bar-volume-indicator = 
bar-volume-fill = "響"
bar-volume-fill-font = 2
bar-volume-empty = "響"

bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.bg}

ramp-volume-0            = "  "
ramp-volume-1            = "  "
ramp-volume-2            = "  "

label-volume             = "%{T4}%percentage:5%% %{T-}   "
label-muted              = "%{T4}%percentage:5%% %{T-} ﱝ "
label-muted-foreground   = ${colors.fgdis}
format-padding = 30



