[module/spotify]
type                     = custom/script
interval                 = 1
format-prefix            = " 阮"
format-prefix-foreground = ${colors.border_audio}
format-prefix-background = ${colors.bg}
format-prefix-underline  = ${colors.border_audio}
format                   = <label>
exec                     = python ~/.config/polybar/spotify_status.py -t 255 -f '{play_pause} {artist}: {song}' -p '[  ],[  ]'
click-left               = python ~/.config/polybar/spotify_status.py -s1 
label-foreground         = ${colors.border_audio}
label-background         = ${colors.bg}
label-underline          = ${colors.border_audio}
label-padding            = 5

[module/gmusicbrowser]
