[module/music]
type             = custom/script
exec             = ~/.config/polybar/music-player.py -f '{icon} {track}) {title} - [ {artist} ]'
tail             = true
label            = %output%
label-foreground= #ff0
click-left       = ~/.config/polybar/music-player.py previous
click-right      = ~/.config/polybar/music-player.py next
click-middle     = ~/.config/polybar/music-player.py play-pause
label-padding    = 5


