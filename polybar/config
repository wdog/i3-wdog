############## ETH ###############
[module/eth]
type = internal/network
interface = enp0s25
interval = 0.5
label-connected = %{T4} [%ifname%]  %{F#090}%local_ip% %{F#ff0}%{F#f90}%upspeed% %{F#0f0}%downspeed% %{T-}
udspeed-minwidth = 5


############## WLAN ###############
[module/wlan]
type                           = internal/network
interface                      = wlp3s0
interval                       = 10

format-connected               = <label-connected>
format-disconnected            = <label-disconnected>

label-connected = %{T4}[%ifname%]    %essid% %{F#090}%local_ip% %{F#f90}%upspeed% %{F#0f0}%downspeed%%{T-}
udspeed-minwidth = 5
label-disconnected-foreground  = #990000

format-connected-background    = ${colors.bg}
format-disconnected-background = ${colors.bg}
format-disconnected-underline  = ${colors.border_wlan}
format-connected-underline     = ${colors.border_wlan}


