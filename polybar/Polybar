############## ETH ###############
[module/eth]
type = internal/network
interface = eno1
interval = 0.5
label-connected = %{T4} [%ifname%]  %{F#0f0}%local_ip% %{F#ff0}%{F#f90}%upspeed% %{F#0f0}%downspeed% %{T-}
downspeed-minwidth = 5
upspeed-minwidth = 5


############## WLAN ###############
[module/wlan]
type                           = internal/network
interface                      = wlp3s0
interval                       = 10

format-connected               = <label-connected>
format-disconnected            = <label-disconnected>

label-connected = %{T4}[%ifname%]    %essid% %{F#0f0}%local_ip% %{F#f90}%upspeed% %{F#0f0}%downspeed%%{T-}
downspeed-minwidth = 5
upspeed-minwidth = 5
label-disconnected-foreground  = #990000

format-connected-background    = ${colors.bg_trans}
format-disconnected-background = ${colors.bg_trans}
format-disconnected-underline  = ${colors.primary}
format-connected-underline     = ${colors.primary}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #0088CC
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label =   %temperature-c%
labeil-foreground = #0088CC
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/menu]
type = custom/menu

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"
;


format-spacing = 1
expand-right = true

label-open = "  "
label-open-font = 1
label-open-background = ${colors.bg_trans}
label-open-foreground = ${colors.primary}
label-close = "  Cancel "
label-close-font = 1
label-close-background = ${colors.background}
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}


menu-0-0 = Browsers
menu-0-0-exec = menu-open-1
menu-0-1 = Multimedia
menu-0-1-exec = menu-open-2

menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-1 = Chrome
menu-1-1-exec = google-chrome &

menu-2-0 = Gimp
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &

