foreground     = #eee
foreground-alt = #555
primary        = #ffb52a
secondary      = #e60053
tertiary       = #20C997
urgent         = #bd2c40

[bar/top]
; monitor           = ${env:MONITOR:HDMI-1}
; monitor           = DP-1
