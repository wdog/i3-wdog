[module/tiddly]
type               = custom/text
content            = "  "
click-left         = ~/bin/beaker-browser.sh &
content-foreground = ${colors.tertiary}
content-underline  = ${colors.tertiary}
content-background = ${colors.bg_trans}
content-padding    = 2


[module/thunar]
type               = custom/text
content            = "  "
click-left         = thunar ~ &
content-underline  = ${colors.tertiary}
content-foreground = ${colors.tertiary}
content-background = ${colors.bg_trans}
content-padding    = 2

[module/mpris]
type             = custom/script
exec             = ~/.config/polybar/scripts/player-mpris-tail.py -f '{icon} {track}) {title} - [ {artist} ]'
tail             = true
label            = %output%
click-left       = ~/.config/polybar/scripts/player-mpris-tail.py previous
click-right      = ~/.config/polybar/scripts/player-mpris-tail.py next
click-middle     = ~/.config/polybar/scripts/player-mpris-tail.py play-pause
label-foreground = #000
label-background = #f90
label-underline  = ${colors.foreground-alt}
label-padding    = 5

