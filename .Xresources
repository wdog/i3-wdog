! URxvt

! General settings
URxvt.saveLines: 12000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: True 


! Fonts
URxvt.font: xft:SauceCodePro Nerd Font Mono:pixelsize=15
URxvt.letterSpace: -1
URxvt*lineSpace: -1

#include </home/wdog/.Xcolors.isotope.dark>
!#include </home/wdog/.Xcolors.londontube.dark>
!#include </home/wdog/.Xcolors.paraiso.dark>
!#include </home/wdog/.Xcolors.seul>


!Disables the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755:    false
URxvt.iso14755_52: false

! HOME END KEYS
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~


! extensions

!URxvt.perl-ext: default,clipboard,url-select
!URxvt.keysym.M-u: perl:url-select:select_next

URxvt.perl-ext: default,selection-to-clipboard
URxvt.clipboard.autocopy: true
URxvt.clipboard.copycmd: xsel -ib
URxvt.clipboard.pastecmd: xsel -ob


URxvt.perl-ext-common: default,matcher,resize-font

! highlight links
URxvt.matcher.rend.0: Uline Bold fg5
! copy paste
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger


! dpi mode
!Xft.dpi: 190
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

twobwm.enable_compton: true
