# vim: filetype=config

# #---Basic Definitions---# #
# Needed for i3-gaps
set $mod Mod1
set $term --no-startup-id   i3-sensible-terminal
for_window [class="^.*"] border pixel 1
gaps inner 7
gaps outer 7
font pango:Play 10
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
hide_edge_borders both
##### WS ##############

#workspace-edit
set $ws1 "1 - Terminals  "
set $ws2 "2 - Browser 🌍"
set $ws3 "3 - Data  📁"
set $ws4 "4 - Dev 🚀"
set $ws5 "5 - Music 🎵 "
set $ws6 "6 - Misc  💎"
set $ws7 "7 - Mail 📩"

# use xprop -> WM_CLASS(STRING) = "gnome-terminal-server", "Gnome-terminal"
for_window [class="Firefox"] move workspace $ws2

for_window [class="Nautilus"] move workspace $ws3

for_window [class="Spotify"] move workspace $ws5

for_window [class="Gimp"] move workspace $ws5

for_window [class="vlc"] move workspace $ws5
for_window [class="vlc"] floating enable

for_window [class="Thunderbird"] move workspace $ws7

for_window [class="Remmina"] floating enable

##### COLORS #############

